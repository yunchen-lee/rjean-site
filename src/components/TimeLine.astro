---
const { title, subtitle } = Astro.props;
---

<div class="flex">
  <div class="education__time">
    <span class="w-2 h-2 bg-black block rounded-full mt-1"></span>
    <span class="education__line bg-black block h-full w-[2px] translate-x-[3px]"></span>
  </div>
  <div class="experience__data bd-grid px-5">
    <h3 class="font-semibold mb-1">{title}</h3>
    <span class="font-light text-sm">{subtitle}</span>
    <p class="mb-6 mt-2 text-justify">
      <slot />
    </p>
  </div>
</div>


